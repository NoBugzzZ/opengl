{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 build active file",
            "command": "/usr/bin/g++-11",
            "args": [
                // "-fdiagnostics-color=always",
                // "-g",
                "-std=c++20",
                "${file}",
                "${workspaceFolder}/lib/glad.c",
                "${workspaceFolder}/include/Shader.cpp",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "-I${workspaceFolder}/include",
                "-I/usr/include",
                // "-L/usr/include",
                "-lglfw",
                "-lGL",
                "-lX11",
                "-lpthread",
                "-lXrandr",
                "-lXi",
                "-ldl",
                "-lassimp",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
